{
    "name": "clean-redux",
    "version": "0.2.2",
    "description": "Toolkit for implementing clean architecture using Redux",
    "repository": {
        "type": "git",
        "url": "git://github.com/garronej/beyond-redux-toolkit.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "npm run _format -- --write",
        "format:check": "npm run _format -- --list-different",
        "yarn_link": "ts-node src/bin/yarn_link.ts",
        "start-demo-app": "yarn yarn_link && cd src/test/demo-app && yarn start"
    },
    "lint-staged": {
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/garronej",
    "license": "MIT",
    "files": [
        "src/",
        "!src/test/",
        "dist/",
        "!dist/test/",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [],
    "homepage": "https://github.com/garronej/beyond-redux-toolkit",
    "peerDependencies": {
        "@reduxjs/toolkit": "^1.7.1"
    },
    "devDependencies": {
        "@types/node": "^16.4.9",
        "@types/react-redux": "^7.1.20",
        "husky": "^4.3.8",
        "lint-staged": "^11.1.1",
        "prettier": "^2.3.2",
        "typescript": "^4.3.5",
        "@reduxjs/toolkit": "^1.7.1",
        "ts-node": "^10.4.0"
    },
    "dependencies": {
        "minimal-polyfills": "^2.2.1",
        "tsafe": "^0.9.0"
    }
}
